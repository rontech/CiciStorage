<% provide(:title, "Home") %>
<% if logged_in? %>
 <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <%= render 'shared/user_info' %>
      </section>
      <section class="picture_form">
        <%= render 'shared/picture_form' %>
      </section>
    </aside>
    <div class="col-md-8">
      <h3>Picture Feed</h3>
      <%= render 'shared/feed' %>
    </div>
  </div>
<% else %>
<div class="center jumbotron">
  <h1>Welcome to Cici Storage</h1>
  <%= link_to "Sign up now!", signup_path, class: "btn btn-lg btn-primary" %>
</div>
<% end %>

<%= link_to image_tag("rontech.jpg", alt: "Rontech logo"),
            'http://www.rontech.co.jp/' %>
