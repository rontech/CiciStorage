<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
  </aside>
  <div class="col-md-8">
    <% if @user.pictures.any? %>
      <h3>Pictures (<%= @user.pictures.count %>)</h3>
      <ol class="pictures">
        <%= render @pictures %>
      </ol>
      <%= will_paginate @pictures %>
    <% end %>
  </div>
</div>
